#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    kscan0: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        diode-direction = "col2row";

//https://zmk.dev/assets/images/pro-micro-pins-labelled-93aa2a889cc45ecddf0161a5fe734434.jpg

        col-gpios
            = <&pro_micro 18 GPIO_ACTIVE_HIGH>  // col 0
            , <&pro_micro 9 GPIO_ACTIVE_HIGH>   // col 1
            , <&pro_micro 8 GPIO_ACTIVE_HIGH>   // col 2
            , <&pro_micro 19 GPIO_ACTIVE_HIGH>  // col 3
            , <&pro_micro 7 GPIO_ACTIVE_HIGH>   // col 4
            , <&pro_micro 6 GPIO_ACTIVE_HIGH>   // col 5
            , <&pro_micro 5 GPIO_ACTIVE_HIGH>   // col 6
            , <&pro_micro 4 GPIO_ACTIVE_HIGH>   // col 7
            , <&gpio1 1 GPIO_ACTIVE_HIGH>       // col 8
            , <&pro_micro 3 GPIO_ACTIVE_HIGH>   // col 9
            , <&gpio1 2 GPIO_ACTIVE_HIGH>       // col 10
            , <&pro_micro 2 GPIO_ACTIVE_HIGH>   // col 11
            ;

        row-gpios
            = <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 0
            , <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 1
            , <&pro_micro 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 2
            , <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 3
            , <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 4
            , <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // row 5
            ;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <6>;
        
 map = <
 
